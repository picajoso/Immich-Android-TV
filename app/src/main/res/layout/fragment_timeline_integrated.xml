<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:focusable="false"
    android:background="@android:color/black"
    tools:context="nl.giejay.android.tv.immich.assets.IntegratedTimelineFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sidebar_navigation_recycler_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:focusable="true"
        android:clipToPadding="false"
        android:background="#11FFFFFF"
        tools:itemCount="10"
        tools:listitem="@layout/item_timeline_month"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/lbl_current_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                tools:text="Abril 2024"/>

            <TextView
                android:id="@+id/lbl_asset_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:textColor="@color/unselected_text_color"
                tools:text="(123 items)"/>

            <ProgressBar
                android:id="@+id/loading_indicator"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

        <androidx.leanback.widget.VerticalGridView
            android:id="@+id/grid_assets"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="32dp"
            android:paddingTop="8dp"
            android:focusable="true"
            tools:listitem="@layout/item_timeline_asset"/>

    </LinearLayout>

</LinearLayout>
